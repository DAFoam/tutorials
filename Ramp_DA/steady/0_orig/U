FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];


internalField   uniform (10 0 0);

boundaryField
{
    inlet
    {
        type              fixedValue;
        value             $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    "(sym.*|top)"
    {
        type            symmetry;
    }
    "(bot)"
    {
        type            noSlip;
        value           uniform (0 0 0);
    }
}


